import numpy as np
import random
from random import randint
from time import strftime, gmtime
from scipy import append


id_porte = np.arange(1, 201, 1) #numeros des portes
##########
evmt = []         # simulation des evenements, 1=evenmnt(porte ouverte), 0=ferm√©e
for i in range(1000):
    evmt.append( randint(1,2) )
evmt
##################################
porte = []                           # simulation des portes
for i in range(1000):
    porte.append( randint(1,200) )
porte
###################################
Heur=[]
for i in range(1000):
    Heur.append(strftime('%H %M %S', gmtime((randint(1,86400)))))
Heur.sort()
Heur
##############
donnee = append(porte, evmt).T
donnees = append(donnee,Heur)
M=donnees.reshape(3,1000)     
data=M.T                       # Les ligne de la matrice correspondent aux evenements (ouverture ou non de la porte)
               
